<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Comentarios</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container d-flex align-items-center  flex-column">
      <div class="row">
        <div class="col">
          <!-- articulo -->
          <div class="card my-3" style="width: 40rem">
            <img src="<%= articles.image %> " class="card-img-top" alt="foto" />
            <div class="card-body">
              <h2 class="card-title"><%= articles.title  %> </h2>
              <h6 class="card-text">
                <%= articles.content %> 
              </h6>
              <p>Posted by <%= user.firstname %>, <%= user.lastname %> </p>
            </div>
          </div>
          <!-- fin articulo -->
        </div>


</div>

<div class="row">
    <div class="col">
<!-- comentarios existentes -->
<% for(const comment of comments) {%> 
    <div class="row d-flex justify-content-center my-3">
      <div class="col-sm-6">
        <div style="width: 40rem;" class="card">
          <div class="card-body">
            <p style="font-size: 0.8rem; color: grey;" class="card-text"><%= comment.content %> </p>
            
          </div>
          
        </div>
      </div>
      <% } %> 
    </div>
</div>

<div class="row">
    <div class="col d-flex justify-content-center">
    <!-- nuevo comentario -->
    <div style="width: 40rem;" class="mb-3">
        <form method="post" action="/blog/<%= articles.id %> ">
      <label for="exampleFormControlTextarea1" class="form-label my-2"><strong> Deje su comentario</strong></label>
      <textarea style="font-size: 0.8rem;" name="comentario" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
      <button type="submit" class="btn btn-dark my-2">Enviar</button>
  </form>
  <a href="/blog">
    <button type="button" class="btn btn-primary">Volver</button>
  </a>
</div>
    </div>
</div>

    </div>
  </body>
</html>
